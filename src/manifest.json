{
	"author": "https://github.com/morizkay",
	"background.service_worker": {
		"persistent": true,
		"scripts": ["./scripts/index.js"]
	},
	"content_scripts": [
		{
			"all_frames": false,
			"js": ["./scripts/index.js"],
			"matches": ["https://twitter.com/*"],
			"run_at": "document_end"
		}
	],
	"description": "Read Silently",
	"manifest_version": 3,
	"name": "Silent Reader",
	"version": "1.0"
}
